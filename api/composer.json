{
    "require": {
        "php": "8.1.*",
        "slim/slim": "^4.9",
        "laminas/laminas-diactoros": "^2.8",
        "php-di/php-di": "^6.3",
        "symfony/console": "^6.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "overtrue/phplint": "^4.1",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.21"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "app": "php bin/app.php --ansi",
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm"
    }
}
