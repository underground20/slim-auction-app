{
    "require": {
        "php": "8.1.*",
        "slim/slim": "^4.9",
        "laminas/laminas-diactoros": "^2.8",
        "php-di/php-di": "^6.3",
        "symfony/console": "^6.0",
        "ramsey/uuid": "^4.2",
        "simple-bus/doctrine-dbal-bridge": "^6.3",
        "webmozart/assert": "^1.10",
        "doctrine/orm": "^2.11",
        "symfony/cache": "^6.0",
        "doctrine/annotations": "^1.13",
        "laminas/laminas-config-aggregator": "^1.7",
        "doctrine/migrations": "^3.4",
        "symfony/mailer": "^6.0",
        "symfony/validator": "^6.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "overtrue/phplint": "^4.1",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.21",
        "phpunit/phpunit": "^9.5",
        "doctrine/data-fixtures": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "app": "php bin/app.php --ansi",
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "test": "phpunit --colors=always"
    }
}
